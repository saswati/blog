<h1> Edit Profile</h1>
<%= image_tag @profile.avatar.url %>
<%= form_for @profile, :html => { :multipart => true } do |f| %>

    <% arr = ["sufix", "first_name", "last_name"] %>

    <%= dynamic_define_fields(arr) %>

    <%= f.file_field :avatar %>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
    <%= link_to 'Show', profile_path(@profile) %>

<% end %>